<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <EditText
        android:id="@+id/title"
        android:hint="Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:maxLines="2"
        />
    <EditText
        android:layout_margin="5dp"
        android:id="@+id/description"
        android:layout_below="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:maxLines="5"/>

    <Button
        android:layout_margin="5dp"
        android:id="@+id/calendar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:text="date"
        android:textSize="10sp"/>

    <TextView
        android:layout_margin="5dp"
        android:layout_alignBaseline="@+id/calendar"
        android:layout_toRightOf="@id/calendar"
        android:id="@+id/show_Date"
        android:layout_width="100dp"
        android:text="show date"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/submit"
        android:text="submit"
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"/>

    <Button
        android:id="@+id/show_list"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:layout_toRightOf="@+id/submit"
        android:layout_alignBaseline="@+id/submit"
        android:layout_alignLeft="@+id/end_Time"
        android:text="list"/>



    <Button
        android:layout_margin="5dp"
        android:id="@+id/show_map"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar"
        android:background="@drawable/ic_map_grey600_36dp"
        />
    <Button
        android:id="@+id/start_Time"
        android:layout_margin="5dp"
        android:background="@drawable/ic_av_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_map"/>


    <Button
        android:id="@+id/end_Time"
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@+id/start_Time"
        android:background="@drawable/ic_av_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_map"/>

    <TextView
        android:id="@+id/stop"
        android:layout_below="@+id/end_Time"
        android:text="Stop Time"
        android:layout_margin="5dp"
        android:layout_alignBaseline="@+id/start"
        android:layout_alignLeft="@+id/end_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/start"
        android:layout_margin="5dp"
        android:layout_below="@+id/start_Time"
        android:text="Start Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="address"
        android:id="@+id/address"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/show_map"
        android:layout_alignBaseline="@+id/show_map"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/drawer_Show"
        android:layout_below="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="show position"/>



</RelativeLayout>
